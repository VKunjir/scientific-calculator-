//conversion function
 int cal::convert()
{
 while(1)
 {
	window(1,1,80,25);
 textbackground(WHITE);
 textcolor(RED);
 clrscr();
  int c;
 gotoxy(20,10);
 cout<<"Enter 1 for Currency Conversion : "<<endl;
 gotoxy(20,11);
 cout<<"Enter 2 for Temperature Conversion : "<<endl;
 gotoxy(20,12);
 cout<<"Enter 3 for Dimension Conversion : "<<endl;
 gotoxy(20,13);
 cout<<"Enter 4 to exit : "<<endl;
 gotoxy(20,14);
 cout<<"Enter Your choice : "<<endl;
 gotoxy(20,15);
 cin>>c;
 switch(c)
  {
  case 1: curr(); break;
  case 2: tem(); break;
  case 3: dim(); break;
  case 4: return(0);
  }
  }
 }

