 //inverse of sine funtion
 void is()
 {
	double a,b,c,pi=3.14159265,d=180,result;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"INVERSE OF SINE FUNTION "<<endl;
	gotoxy(4,3);
	cout<<"Enter a number "<<endl;
	gotoxy(4,4);
	cin>>a;
	b=asin(a);
	c=b*d;
	result=c/pi;
	gotoxy(4,5);
	cout<<" Sine Inverse of  "<<a<<" is "<<result<<endl;
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
 }
