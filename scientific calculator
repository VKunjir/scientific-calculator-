 //anti_log to base e
 void anti_log()
 {
	double p,q;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"ANTILOG OF BASE e "<<endl;
	gotoxy(4,3);
	cout<<"Enter a number "<<endl;
	gotoxy(4,4);
	cin>>p;
	q=pow(2.718281828,p);
	gotoxy(4,5);
	cout<<"Antilog of base e is "<<q;
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
 }
