 //Logarithmic funtion
 int cal::log()
 {
 while(1)
 {
	window(1,1,80,25);
 textbackground(WHITE);
 textcolor(RED);
 clrscr();
  int a,b,c;

 gotoxy(20,10);
 cout<<"Enter 1 for Log to base e : "<<endl;
 gotoxy(20,11);
 cout<<"Enter 2 for Log to base 10 : "<<endl;
 gotoxy(20,12);
 cout<<"Enter 3 for Antilog of base e : "<<endl;
 gotoxy(20,13);
 cout<<"Enter 4 for Antilog of base 10  : "<<endl;
 gotoxy(20,14);
 cout<<"Enter 5 to exit : "<<endl;
 gotoxy(20,15);
 cout<<"Enter Your choice : "<<endl;
 gotoxy(20,16);
 cin>>c;
 switch(c)
  {
  case 1: log_e(); break;
  case 2: log_10(); break;
  case 3: anti_log(); break;
  case 4: anti_log10(); break;
  case 5: return(0);
	}
  }
 }
//sine funtion
 void si()
 {
	double a,b,c,pi=3.14159265,d=180,result;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"SINE FUNTION "<<endl;
	gotoxy(4,3);
	cout<<"Enter angle "<<endl;
	gotoxy(4,4);
	cin>>a;
	b=a*pi;
	c=b/d;
	result=sin(c);
	gotoxy(4,5);
	cout<<"sine value of "<<a<<" is "<<result<<endl;
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
 }
