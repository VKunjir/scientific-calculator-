//Indian rupee  funtion
 int IND(double x)
 {
 while(1)
 {
	window(1,1,80,25);
 textbackground(WHITE);
 textcolor(RED);
 clrscr();
  int c;
 gotoxy(20,10);
 cout<<"Indian rupees to which currency you want to convert :"<<endl;
 gotoxy(20,11);
 cout<<"Enter 1 for US Dollar : "<<endl;
 gotoxy(20,12);
 cout<<"Enter 2 for UK Pound : "<<endl;
 gotoxy(20,13);
 cout<<"Enter 3 for EURO  : "<<endl;
 gotoxy(20,14);
 cout<<"Enter 4 for Japenese Yen : "<<endl;
 gotoxy(20,15);
 cout<<"Enter 5 to exit : "<<endl;
 gotoxy(20,17);
 cout<<"Enter Your choice : "<<endl;
 gotoxy(20,19);
 cin>>c;
 switch(c)
  {
  case 1: IND_USD(x); break;
  case 2: IND_UKP(x); break;
  case 3: IND_ER(x); break;
  case 4: IND_YEN(x); break;
  case 5: return(0);
  }
  }
 }
