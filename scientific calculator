 //Sub Fahrenheit temperature  funtion
 int fah(double x)
 {
 while(1)
 {
	window(1,1,80,25);
 textbackground(WHITE);
 textcolor(RED);
 clrscr();
  int c;
 gotoxy(20,10);
 cout<<"Fahrenheit to which temperature you want to convert :"<<endl;
 gotoxy(20,11);
 cout<<"Enter 1 for Celsius : "<<endl;
 gotoxy(20,12);
 cout<<"Enter 2 for Kelvin : "<<endl;
 gotoxy(20,13);
 cout<<"Enter 3 to exit : "<<endl;
 gotoxy(20,14);
 cout<<"Enter Your choice : "<<endl;
 gotoxy(20,15);
 cin>>c;
 switch(c)
  {
  case 1: FAH_CEL(x); break;
  case 2: FAH_KEL(x); break;
  case 3: return(0);
  }
  }
 }
