//ind to usd
void IND_USD(double p)
 {
	double q;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"Indian Rupee to US Dollor "<<endl;
	q=p*0.013;
	gotoxy(4,4);
	cout<<"US dollor = "<<q;
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
 }
