//Trigonomatric  function
 int cal::tri()
{
 while(1)
 {
	window(1,1,80,25);
 textbackground(WHITE);
 textcolor(RED);
 clrscr();
  int c;

 gotoxy(20,10);
 cout<<"Enter 1 for sin : "<<endl;
 gotoxy(20,11);
 cout<<"Enter 2 for cos : "<<endl;
 gotoxy(20,12);
 cout<<"Enter 3 for tan : "<<endl;
 gotoxy(20,13);
 cout<<"Enter 4 for cosec : "<<endl;
 gotoxy(20,14);
 cout<<"Enter 5 for sec : "<<endl;
 gotoxy(20,15);
 cout<<"Enter 6 for cot : "<<endl;
 gotoxy(20,16);
 cout<<"Enter 7 for sin inverse : "<<endl;
 gotoxy(20,17);
 cout<<"Enter 8 for cos inverse : "<<endl;
 gotoxy(20,18);
 cout<<"Enter 9 for tan inverse : "<<endl;
 gotoxy(20,19);
 cout<<"Enter 10 to exit : "<<endl;
 gotoxy(20,20);
 cout<<"Enter Your choice : "<<endl;
 gotoxy(20,21);
 cin>>c;
 switch(c)
  {
  case 1: si(); break;
  case 2: co(); break;
  case 3: ta(); break;
  case 4: cose(); break;
  case 5: se(); break;
  case 6: cott(); break;
  case 7: is(); break;
  case 8: ic(); break;
  case 9: it(); break;
  case 10: return(0);
  }
  }
 }
