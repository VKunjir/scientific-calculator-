//Addition
 void add()
{  	double p,q;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"ADDITION OF NUMBER "<<endl;
	gotoxy(4,3);
	cout<<"Enter two number "<<endl;
	gotoxy(4,4);
	cin>>p;
	gotoxy(4,5);
	cin>>q;
	gotoxy(4,6);
	cout<<"Sum is "<<p+q;
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
}
