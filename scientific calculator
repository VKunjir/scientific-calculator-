//temperature funtion
 int tem()
 {
 while(1)
 {
	window(1,1,80,25);
 textbackground(WHITE);
 textcolor(RED);
 clrscr();
 double m=0;
   int c;
 gotoxy(20,6);
 cout<<"Your in Temperature Function"<<endl;
  gotoxy(20,8);
 cout<<"Enter Temperature : ";
 cin>>m;
 gotoxy(20,10);
 cout<<"Which Temperature have you enter :"<<endl;
 gotoxy(20,11);
 cout<<"Enter 1 for Celsius  : "<<endl;
 gotoxy(20,12);
 cout<<"Enter 2 for Kelvin : "<<endl;
 gotoxy(20,13);
 cout<<"Enter 3 for Fahrenheit : "<<endl;
 gotoxy(20,14);
 cout<<"Enter 4 for Exit  : "<<endl;
 gotoxy(20,15);
 cout<<"Enter Your choice : "<<endl;
 gotoxy(20,16);
 cin>>c;
 switch(c)
  {
  case 1: cel(m); break;
  case 2: kel(m); break;
  case 3: fah(m); break;
  case 4: return(0);
  }
  }
 }

