/******************************************/
// Fahrenheit to kelvin
void FAH_KEL(double p)
 {
	double a,b;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"FAHRENHEIT TO KELVIN "<<endl;
	a=p+459.67;
	b=(a*5)/9;
	gotoxy(4,4);
	cout<<"Kelvin temperature = "<<b;
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
 }
 //Fahrenheit to celsius
void FAH_CEL(double p)
 {
	double a,b;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"FAHRENHEIT TO CELSIUS "<<endl;
	a=p-32;
	b=(a*5)/9;
	gotoxy(4,4);
	cout<<"Celsius temperature = "<<b;
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
 }

// Kelvin to Fahrenheit
void KEL_FAH(double p)
 {
	double a,b;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"KELVIN TO FAHRENHEIT "<<endl;
	a=(p-273.15)*1.8;
	b=a+32;
	gotoxy(4,4);
	cout<<"Fahrenheit temperature = "<<b;
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
 }
