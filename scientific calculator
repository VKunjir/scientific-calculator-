// Power function
int po()
{
	double p,q;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"POWER FUNCTION "<<endl;
	gotoxy(4,3);
	cout<<"Enter base number & power number "<<endl;
	gotoxy(4,4);
	cin>>p;
	gotoxy(4,5);
	cin>>q;
	gotoxy(4,6);
	cout<<"Power of "<<p<<"^"<<q<<" is "<<pow(p,q);
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
}
//square root  function
int sq()
{
	double p;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"SQUARE ROOT FUNCTION "<<endl;
	gotoxy(4,3);
	cout<<"Enter number "<<endl;
	gotoxy(4,4);
	cin>>p;
	gotoxy(4,6);
	cout<<"Square root of "<<p<<" is "<<sqrt(p);
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
}
//******   ************** *    **********
// Factorial function
void fac()
{
	int p,q=1,i;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"FACTORIAL FUNCTION "<<endl;
	gotoxy(4,3);
	cout<<"Enter  number "<<endl;
	gotoxy(4,4);
	cin>>p;
	for(i=1;i<=p;i++)
	{	q=q*i;	}
	gotoxy(4,6);
	cout<<"Factorial of "<<p<<" is "<<q;
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
}

 //Using membership label for art to be memeber of cal class
 int cal::art()
 {
 while(1)
 {
	window(1,1,80,25);
 textbackground(WHITE);
 textcolor(RED);
 clrscr();
  int a,b,c;

 gotoxy(20,10);
 cout<<"Enter 1 for Addition : "<<endl;
 gotoxy(20,11);
 cout<<"Enter 2 for Substration : "<<endl;
 gotoxy(20,12);
 cout<<"Enter 3 for Mulipication : "<<endl;
 gotoxy(20,13);
 cout<<"Enter 4 for Division : "<<endl;
 gotoxy(20,14);
 cout<<"Enter 5 for Power : "<<endl;
 gotoxy(20,15);
 cout<<"Enter 6 for Square : "<<endl;
 gotoxy(20,16);
 cout<<"Enter 7 for factrial : "<<endl;
 gotoxy(20,17);
 cout<<"Enter 8 to exit : "<<endl;
 gotoxy(20,19);
 cout<<"Enter Your choice : "<<endl;
 gotoxy(20,20);
 cin>>c;
 switch(c)
  {
  case 1: add(); break;
  case 2: sub(); break;
  case 3: mul(); break;
  case 4: div(); break;
  case 5: po(); break;
  case 6: sq(); break;
  case 7: fac(); break;
  case 8: return(0);
  }
  }
 }
 //log to base e
 void log_e()
 {
	double p,q;
	window(1,1,80,25);
	textbackground(WHITE);
	clrscr();
	window(20,10,60,16);
	textbackground(11);
	clrscr();
	gotoxy(20,10);
	cout<<"LOG TO BASE e "<<endl;
	gotoxy(4,3);
	cout<<"Enter a number "<<endl;
	gotoxy(4,4);
	cin>>p;
	q=log(p);
	gotoxy(4,5);
	cout<<"log to base e is "<<q;
	textcolor(BLUE+BLINK);
	gotoxy(4,7);
	cout<<"Press any key to exit";
	getch();
 }
