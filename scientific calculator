 gotoxy(4,4);
 cout<<"Press any key to continue";
 getch();

  while(1)
  {
  window(1,1,80,25);
 textbackground(WHITE);
 textcolor(RED);
 clrscr();
  int a,b,c;

 gotoxy(20,10);
 cout<<"Enter 1 for Arithmatic Function : "<<endl;
 gotoxy(20,11);
 cout<<"Enter 2 for Trionometric Function : "<<endl;
 gotoxy(20,12);
 cout<<"Enter 3 for Logarthimic Function : "<<endl;
 gotoxy(20,13);
 cout<<"Enter 4 for Conversion Function : "<<endl;
 gotoxy(20,14);
 cout<<"Enter 5 to exit : "<<endl;
 gotoxy(20,15);
 cout<<"Enter Your choice : "<<endl;
 gotoxy(20,16);
 cin>>c;
 switch(c)
 {
  case 1:obj1.art(); break;
  case 3:obj1.log(); break;
  case 2:obj1.tri(); break;
  case 4: obj1.convert(); break;
  case 5: exit(0);
 }
}
